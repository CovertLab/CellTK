FROM braysia/celltk

WORKDIR /root
RUN wget https://github.com/braysia/CellTK/archive/v0.1.zip && unzip v0.1.zip && rm v0.1.zip\
    && wget https://github.com/braysia/covertrace/archive/v0.1.zip && unzip v0.1.zip && rm v0.1.zip

WORKDIR /root/CellTK-0.1
RUN python setup.py install
WORKDIR /root/covertrace-0.1
RUN python setup.py  install
RUN pip install seaborn==0.7.1 bokeh==0.12.5
WORKDIR /home